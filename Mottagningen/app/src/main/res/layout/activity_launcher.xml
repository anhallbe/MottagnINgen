<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/lightgray" >
    
    <ImageView
        android:src="@drawable/mottagningen_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="@dimen/small_distance"
        android:layout_marginRight="@dimen/small_distance"
        android:layout_marginTop="@dimen/small_distance" />
    
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="48dp" >
        
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageButton
                android:id="@+id/news_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/news_button"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:onClick="newsButtonClicked" />
            <ImageButton
                android:id="@+id/map_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/map_button"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:onClick="mapButtonClicked" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageButton
                android:id="@+id/schedule_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/schedule_button"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:onClick="scheduleButtonClicked" />
            <ImageButton
                android:id="@+id/contact_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/contact_button"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"
                android:onClick="contactButtonClicked" />
        </TableRow>
    </TableLayout>
</LinearLayout>
