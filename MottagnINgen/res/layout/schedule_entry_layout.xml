<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_distance"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/larger_distance"
    android:paddingRight="@dimen/larger_distance"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center">
    
    <TextView 
        android:id="@+id/schedule_time_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:textColor="@color/gray"/>

    <TextView 
        android:id="@+id/schedule_description_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:minLines="2"
        android:maxLines="3"
        android:ellipsize="middle"
        android:textColor="@color/gray"/>
    
    <TextView 
        android:id="@+id/schedule_location_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="@color/gray"/>
</LinearLayout>
