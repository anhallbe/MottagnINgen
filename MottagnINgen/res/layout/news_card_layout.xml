<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/medium_distance"
    android:padding="@dimen/small_distance"
    android:background="@drawable/selectable_card_background"
    android:layout_marginTop="@dimen/small_distance"
    android:layout_marginLeft="@dimen/medium_distance"
    android:layout_marginRight="@dimen/medium_distance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/small_distance"
        android:paddingRight="@dimen/small_distance" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="@color/kiselbla"
            android:typeface="sans" />

    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/kiselbla"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/xsmall_distance" >

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_distance"
            android:maxLines="8"
            android:textColor="@color/gray"
            android:typeface="sans" />
    </LinearLayout>

</LinearLayout>